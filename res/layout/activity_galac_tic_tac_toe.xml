<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <ImageView
        android1:id="@+id/startgame"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_centerHorizontal="true"
        android1:layout_centerVertical="true"
        android1:contentDescription="@string/btn_startgame"
        android1:src="@drawable/btn_start" />

    <ImageView
        android1:id="@+id/howtoplay"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/startgame"
        android1:layout_below="@+id/startgame"
        android1:contentDescription="@string/btn_howtoplay"
        android1:src="@drawable/btn_help" />

    <ImageView
        android1:id="@+id/about"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/howtoplay"
        android1:layout_below="@+id/howtoplay"
        android1:contentDescription="@string/btn_about"
        android1:src="@drawable/btn_about" />

    <ImageView
        android1:id="@+id/quit"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/about"
        android1:layout_below="@+id/about"
        android1:contentDescription="@string/btn_about"
        android1:src="@drawable/btn_quit" />

    <ImageView
        android1:id="@+id/titleimage"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentTop="true"
        android1:contentDescription="@string/title_image"
        android1:src="@drawable/title" />

</RelativeLayout>