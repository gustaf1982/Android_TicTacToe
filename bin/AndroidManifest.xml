<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.galactictactoe"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".GalacTicTacToe"
            android:label="@string/title_activity_gala_tic_tac_toe" >
            <intent-filter>
                <action android:name="com.galactictactoe.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".Splash"
            android:label="@string/title_activity_gala_tic_tac_toe" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
       <activity
            android:name=".About"
            android:label="@string/about" > 
        </activity>
        <activity
            android:name=".HowToPlay"
            android:label="@string/howtoplay" > 
        </activity>
        <activity
            android:name=".Game"
            android:label="@string/howtoplay" > 
        </activity>
        <activity android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
        <meta-data android:name="ADMOB_PUBLISHER_ID"
            android:value="ca-app-pub-5610387420094247/6858946467"/>
    </application>

</manifest>